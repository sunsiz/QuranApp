@using QuranBlazor.Data
@inject IJSRuntime JsRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@implements IDisposable
<div class="top-row ps-3 navbar sticky-top header-bg-color">
    <div class="container-fluid d-flex align-items-center">
        <a class="navbar-brand d-flex flex-grow-1" href="">
            <img src="logo.svg" alt="@TransliterationService.GetDisplayText("Ўзбекча таржима")" width="32" height="32" class="d-flex align-text-top">
            <span class="fs-3 fw-bold d-flex align-self-center text-center mx-auto text-white">@TransliterationService.GetDisplayText("Ўзбекча таржима")</span>
        </a>
        
        <!-- Script Toggle Badge -->
        <button type="button" 
                class="btn btn-sm script-toggle-badge me-2" 
                @onclick="ToggleScript"
                @onclick:stopPropagation="true"
                title="@TransliterationService.GetDisplayText("Ёзув турини ўзгартириш")"
                aria-label="@TransliterationService.GetDisplayText("Ёзув турини ўзгартириш")">
            <span class="fw-bold">@(TransliterationService.IsLatinScriptSelected ? "Кр" : "La")</span>
        </button>
        
        <button title="@TransliterationService.GetDisplayText("Навигация менюси")" 
                aria-label="@TransliterationService.GetDisplayText("Навигация менюси")" 
                class="navbar-toggler" 
                @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column fw-bold">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <img src="home.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Бош саҳифа")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Suras" Match="NavLinkMatch.All">
                <img src="book.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Суралар")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Collections" Match="NavLinkMatch.All">
                <img src="collections_bookmark.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Тўпламлар")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Notes" Match="NavLinkMatch.All">
                <img src="edit_note.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Қайдлар")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Search" Match="NavLinkMatch.All">
                <img src="search.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Излаш")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink type="button" class="nav-link" Match="NavLinkMatch.All" @onclick="() => DisplayPrompt()">
                <img src="arrow_forward.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Оятга ўтиш")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Settings" Match="NavLinkMatch.All">
                <img src="tune.svg" class="svg-icon svg-icon-lg mx-2" alt="" />
                @TransliterationService.GetDisplayText("Созламалар")
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        TransliterationService.OnScriptChanged += HandleScriptChanged;
    }

    private void HandleScriptChanged()
    {
        InvokeAsync(StateHasChanged); // Re-render the NavMenu when script changes
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleScript()
    {
        var currentScript = Preferences.Get("UzbekScript", "Cyrillic");
        var newScript = currentScript == "Cyrillic" ? "Latin" : "Cyrillic";
        Preferences.Set("UzbekScript", newScript);
        TransliterationService.NotifyScriptChanged();
    }

    private async Task DisplayPrompt()
    {
        // Transliterate dialog prompts if necessary
        var promptTitle = TransliterationService.GetDisplayText("Оятга ўтиш");
        var promptMessage = TransliterationService.GetDisplayText("Сура ва оят рақамини киритинг (масалан: 16:90 ёки 16/90)");
        var okButton = TransliterationService.GetDisplayText("Кириш");
        var cancelButton = TransliterationService.GetDisplayText("Қайтиш");

        var sureayetno = await DialogService.DisplayPrompt(promptTitle, promptMessage, okButton, cancelButton);
        if (!string.IsNullOrEmpty(sureayetno) && (sureayetno.Contains(':') || sureayetno.Contains('/')))
        {
            char delimiter = sureayetno.Contains(':') ? ':' : '/';
            var parts = sureayetno.Split(delimiter);
            if (parts.Length == 2 && int.TryParse(parts[0], out int suraId) && int.TryParse(parts[1], out int ayaId))
            {
                NavigationManager.NavigateTo($"AyaList?SuraId={suraId}#{ayaId}");
                return;
            }
        }
        var alertTitle = TransliterationService.GetDisplayText("Нотўгри шакл");
        var alertMessage = TransliterationService.GetDisplayText("Сиз боб ва оят рақамини нотўғри киритдингиз, қайта уриниб кўринг (мисол: 16:90 ёки 16/90)");
        var alertButton = TransliterationService.GetDisplayText("Қайтиш");
        await DialogService.DisplayAlert(alertTitle, alertMessage, alertButton);
    }

    public void Dispose()
    {
        TransliterationService.OnScriptChanged -= HandleScriptChanged;
    }
}
