@page "/settings"

@code {
    public int ArabicFontSize
    {
        get => Preferences.Get("ArabicFontSize", 16);
        set => Preferences.Set("ArabicFontSize", value);
    }
    public int TranslateFontSize
    {
        get => Preferences.Get("TranslateFontSize", 14);
        set => Preferences.Set("TranslateFontSize", value);
    }
    public int CommentFontSize
    {
        get => Preferences.Get("CommentFontSize", 12);
        set => Preferences.Set("CommentFontSize", value);
    }
}
<div class="mx-4">
    <div class="card bg-light bg-gradient">
        <h3 class="px-5 py-3 shadow-lg w-100 bg-warning bg-gradient rounded-3 card-title">Settings</h3>
        <div class="card-body">
            <div class="vstack border-3 p-2 m-2 rounded-3 bg-info bg-gradient shadow-sm">
                <h5 class="card-title hstack gap-3 text-white">Arabic Font Size</h5>
                <label for="arabicRange" class="form-label">Current font size: @ArabicFontSize px</label>
                <input type="range" class="form-range" min="10" max="26" step="1" id="arabicRange" @bind-value="@ArabicFontSize">
            </div>
            <div class="vstack border-3 p-2 m-2 bg-gradient bg-info rounded-3 shadow-sm">
                <h5 class="card-title hstack gap-3 text-white">Translate Font Size</h5>
                <label for="translateRange" class="form-label">Current font size: @TranslateFontSize px</label>
                <input type="range" class="form-range" min="12" max="28" step="1" id="translateRange" @bind-value="@TranslateFontSize">
            </div>
            <div class="vstack border-3 p-2 m-2 bg-gradient bg-info rounded-3 shadow-sm">
                <h5 class="card-title hstack gap-3 text-white">Comment Font Size</h5>
                <label for="commentRange" class="form-label">Current font size: @CommentFontSize px</label>
                <input type="range" class="form-range" min="6" max="24" step="1" id="commentRange" @bind-value="@CommentFontSize">
            </div>
        </div>
    </div>
</div>
