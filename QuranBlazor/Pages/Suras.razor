@page "/suras"
@using QuranBlazor.Data
@inject DBContext db

@code {
    public IEnumerable<Sura> SuraList { get; set; }
    protected override void OnInitialized()
    {
        SuraList = db.GetSuraListAsync().Result;
        base.OnInitialized();
    }

    string SuraFilter;

    private void FilterSura()
    {
        SuraList = SuraList.Where(s => s.Name.Contains(SuraFilter, StringComparison.OrdinalIgnoreCase));
    }

}

<div class="text-white mb-3 form-floating">
    <input class="form-control me-2 rounded-pill primary-color" id="floatingSearch" type="search" placeholder="Сура Излаш" @bind="SuraFilter" @bind:event="oninput" @bind:after="FilterSura" aria-label="Сура Излаш">
    <label class="primary-color" for="floatingSearch">Сура Излаш</label>
</div>

@foreach (Sura sura in SuraList)
{
    <div class="row my-2">
        <div class="col">
            <div class="card bg-light bg-gradient rounded-pill">
                <div class="card-body py-1">
                    <a href="AyaList?SuraId=@sura.Id&SuraName=@sura.Name" class="stretched-link text-black">
                        <div class="hstack">
                            <div class="vstack">
                                <h5 class="card-title mb-0">@sura.Id. @sura.Name</h5>
                                @{ var revealed = sura.RevealedIn ? "Макка" : "Мадина"; }
                                <p class="card-text"><span class="my-0">@sura.Meaning</span> - @revealed (@sura.AyaCount)</p>
                            </div>
                            <h2 class="arabic">@sura.ArabicName</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

