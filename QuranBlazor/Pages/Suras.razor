@page "/suras"
@using QuranBlazor.Data
@using System.Diagnostics
@inject DbContext db
@inject IJSRuntime JsRuntime

@code {
    public IEnumerable<Sura> SuraList { get; set; }
    protected override async Task OnInitializedAsync()
    {
        SuraList = await db.GetSuraListAsync().ConfigureAwait(false);
        base.OnInitialized();
    }

    string SuraFilter;

    private void FilterSura()
    {
        SuraList = SuraList.Where(s => s.Name.Contains(SuraFilter, StringComparison.InvariantCultureIgnoreCase));
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("restoreScrollPosition");
            Debug.WriteLine("rendering again and try to scroll back");

    // Attach the saveScrollPosition function to all anchor tags
            await JsRuntime.InvokeVoidAsync("eval", @"
                document.querySelectorAll('a').forEach(anchor => {
                    anchor.addEventListener('click', (e) => {
                        saveScrollPosition();
                        console.log('Anchor clicked, scroll position saved.');
                    });
                });
            ");
        }
    }
}

<div class="text-white mb-3">
    @*  form-floating *@
    <input class="form-control me-2 rounded-pill primary-color p-3" id="floatingSearch" type="search" placeholder="@TransliterationService.GetDisplayText(" Сура Излаш")" @bind="SuraFilter" @bind:event="oninput" @bind:after="FilterSura" aria-label="Сура Излаш">
    @* <label class="primary-color" for="floatingSearch">Сура Излаш</label> *@
</div>
@if (SuraList != null)
{
    @foreach (Sura sura in SuraList)
    {
        <div class="row my-2">
            <div class="col">
                <div class="card bg-light bg-gradient rounded-pill">
                    <div class="card-body py-1">
                        <a href="AyaList?SuraId=@sura.Id&SuraName=@sura.Name" class="stretched-link text-black">
                            <div class="hstack">
                                <div class="vstack">
                                    <h5 class="card-title mb-0">@sura.Id. @TransliterationService.GetDisplayText(sura.Name)</h5>
                                    @{
                                        var revealed = sura.RevealedIn ? @TransliterationService.GetDisplayText("Мадина") : @TransliterationService.GetDisplayText("Макка");
                                    }
                                    <p class="card-text">@* <span class="my-0">@sura.Meaning</span> -  *@@revealed (@sura.AyaCount)</p>
                                </div>
                                <h2 class="arabic">@sura.ArabicName</h2>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
